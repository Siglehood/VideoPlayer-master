<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#696969"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_current_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:paddingStart="0dp"
                android:text="@string/time"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:thumb="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingStart="5dp"
                android:text="@string/time"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/btn_play"
                style="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/style_button_play" />

            <Button
                android:id="@+id/btn_last"
                style="@null"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/style_button_last" />

            <Button
                android:id="@+id/btn_backward"
                style="@null"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/style_button_backward" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" >

                <Button
                    android:id="@+id/btn_pause"
                    style="@null"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/style_button_pause" />

                <Button
                    android:id="@+id/btn_continue"
                    style="@null"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/style_button_continue"
                    android:visibility="gone" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_forward"
                style="@null"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/style_button_forward" />

            <Button
                android:id="@+id/btn_next"
                style="@null"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/style_button_next" />

            <Button
                android:id="@+id/btn_stop"
                style="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/style_button_stop" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>